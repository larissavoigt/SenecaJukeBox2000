@model IEnumerable<Assigment8.Controllers.ArtistWithDetail>

@{
    ViewBag.Title = "All Artists";
}

<div class="page-header">
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            @Html.ActionLink("Create New Artist", "Create", null, new { @class = "btn btn-primary pull-right" })
        </div>
    </div>
    <h1>All Artists</h1>
</div>

<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlArtist)
            </th>
            <th class="text-center">
                # of Albums
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthOrStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Executive)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.UrlArtist" width="200" class="thumbnail" />
                </td>
                <td class="text-center">
                    @Html.Encode(item.Albums.Count())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthOrStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Executive)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>