@model IEnumerable<Assigment8.Controllers.AlbumWithDetail>

@{
    ViewBag.Title = "All Albums";
}

<div class="page-header">
    <h1>All Albums</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordinator)
            </th>
            <th></th>
        </tr>
    </thead>
    

   <tbody>
       @foreach (var item in Model)
       {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.Name)
               </td>
               <td>
                   <img src="@item.UrlAlbum" width="200" class="thumbnail" />
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Genre)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.ReleaseDate)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Coordinator)
               </td>
               <td>
                   @Html.ActionLink("Details", "Details", new { id = item.Id })
               </td>
           </tr>
       }
   </tbody>

</table>