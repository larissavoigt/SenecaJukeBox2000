@model Assigment8.Controllers.TrackWithDetail

@{
    ViewBag.Title = Model.Name;
}

<div class="page-header">
    <div class='btn-toolbar pull-right'>
        <div class='btn-group pull-right'>  
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
    <h1>Track - @Model.Name</h1>
</div>

<div class="row">

    <div class="col-md-6">

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Composers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Composers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Clerk)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Clerk)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.ClipUrl)
            </dt>
            
            <dd>
                <audio src="@Model.ClipUrl" controls="controls">
                    Your browser does not support the
                    <code>audio</code> element.
                </audio>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Albums)
            </dt>

            <dd>
                <ul class="list-unstyled">
                    @foreach (var item in Model.Albums)
            {
                        <li>@Html.ActionLink(item.Name, "Details", "Albums", new { id = item.Id }, null)</li>
                    }
                </ul>
            </dd>

        </dl>
    </div>
</div>