@model IEnumerable<Assigment8.Controllers.TrackWithDetail>

@{
    ViewBag.Title = "All Tracks";
}

<div class="page-header">
    <h1>All Tracks</h1>
</div>

<table class="table">
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Composers)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Albums)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clerk)
            </th>
            <th></th>
        </tr>
    </thead>

<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composers)
            </td>
            <td class="text-center">
                @item.AlbumName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clerk)
            </td>
            <td class="text-right">
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            </td>
        </tr>
    }
</tbody>

</table>
